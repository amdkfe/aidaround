<!-- list of ASSIGNED tasks by a specific user -->
<!-- called from :controller => user, :action => created_tasks -->

<%= "#{@user.username.capitalize}'s assigned tasks" %> 

<div>
  <%@task = @user.assigned_tasks%>
 
  <div class = "taskList">
    <% @task.each do |i| %>
    <div> <%= time_ago_in_words(i.created_at).gsub('about','') +" ago" %> </div>
    <div> <%= i.status %> </div>
    <div> <%= i.title.capitalize %> </div>
    <div> <%= i.desc.capitalize %> </div>
    <div> Valid until: <%= i.duration %> </div>
    <div> Points: <%= i.points %> </div>
    <div> Created by: <%= link_to  "#{@creator.username.capitalize}", user_path(@creator) %></div>
    <div> Assigned to: <%= link_to  "#{@assignee.username.capitalize}", user_path(@assignee) %></div>
    
    <div> <%= link_to 'Show created tasks', task_path(@tasklist.id) %></div>
    <% end%>
  </div>
</div>
