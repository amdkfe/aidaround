
<div>
  <%= image_tag current_user.avatar, width: '20%' %>
</div>
<div>
  Username: <%= current_user.username %>
</div>
<div>
  Email: <%= current_user.email %>
</div>
<div>
  Address: <%= current_user.postcode %>
</div>

<%= tag.div nil, id: 'profilemap' %>

<script>
  var map = new GMaps({
    div: '#profilemap',
    lat: <%= current_user.latitude %>,
    lng: <%= current_user.longitude %>,
  });
  map.addMarker({
    lat: <%= current_user.latitude %>,
    lng: <%= current_user.longitude %>,
    title: '<%= current_user.postcode %>',
})
</script>